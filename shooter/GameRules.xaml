<UserControl x:Class="shooter.GameRules"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:shooter"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Viewbox Stretch="Uniform">
        <Grid Height="311" Width="448">
            <Button x:Name="validate" Content="Compris"  Margin="63,235,63,0" VerticalAlignment="Top" Height="52" Width="322" FontSize="36" FontWeight="Bold" Background="#FF50841D" Foreground="#FFBAE0A9" BorderBrush="#FF20481C" Click="validate_Click"/>
            <TextBlock x:Name="txtBlocRules" Margin="45,10,45,118" Background="Green" TextWrapping="Wrap" TextAlignment="Center" FontSize="14" Foreground="White" >
                RÈGLES DU JEU <LineBreak/><LineBreak/>
                1. S'ÉCHAPPER : Trouvez le chemin à travers la forêt pour atteindre la sortie de la zone. <LineBreak/><LineBreak/>
                2. SURVIVRE : Éliminez les monstres et esquivez leurs tirs.<LineBreak/><LineBreak/>
                3. MAÎTRISER SON ARME : Débloquez des nouveau types de hache pour adapter votre stratégie au combat.
            </TextBlock>
        </Grid>
    </Viewbox>



</UserControl>
