<Window x:Name="gameCanvas" x:Class="shooter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:shooter"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280"
        KeyDown="Window_KeyDown"
        KeyUp="Window_KeyUp" WindowStartupLocation="CenterScreen" WindowState="Maximized" Foreground="{x:Null}" SizeToContent="WidthAndHeight">
    <Viewbox Stretch="Uniform">
        <Canvas x:Name="canvas" 
                Width="1920" 
                Height="1080">
            <Canvas.Background>
                <ImageBrush ImageSource="/UIAssets/background.png" Stretch="UniformToFill" TileMode="None"/>
            </Canvas.Background>

        </Canvas>
    </Viewbox>
</Window>
