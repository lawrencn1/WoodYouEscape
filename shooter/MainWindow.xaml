<Window x:Name="gameCanvas" x:Class="shooter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:shooter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        KeyDown="Window_KeyDown"
        KeyUp="Window_KeyUp" WindowStartupLocation="CenterScreen" WindowState="Maximized" ResizeMode="CanMinimize" Foreground="{x:Null}">
    <Canvas x:Name="canvas" Focusable="True">
        <Canvas.Background>
            <ImageBrush ImageSource="/background2.png" Stretch="UniformToFill" TileMode="None"/>
        </Canvas.Background>

    </Canvas>
</Window>
