<UserControl x:Class="shooter.UCNotifications"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             mc:Ignorable="d" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#AA000000">
        <Border Width="600" Height="300" Background="#FF333333" BorderBrush="White" BorderThickness="2" CornerRadius="10">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Opacity="0.96">

                <Label Content="NIVEAU TERMINÉ" 
                       Foreground="Green" FontSize="40" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <Label x:Name="MessageLabel" 
                       Content="Nouvelle Hache Débloquée" 
                       Foreground="White" FontSize="25" 
                       HorizontalAlignment="Center" Margin="0,0,0,30"/>
                
                <Label x:Name="MessageLabel2" 
                        Content="Hache de bûcheron (Appuyer sur 1)" 
                        Foreground="White" FontSize="25" 
                        HorizontalAlignment="Center" Margin="0,0,0,30"
                        Opacity="0.75"/>    

                <Button x:Name="ContinueBtn" 
                        Content="CONTINUER" 
                        Width="200" Height="50" FontSize="20" FontWeight="Bold"
                        Background="Orange"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>