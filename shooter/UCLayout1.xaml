<UserControl x:Class="shooter.UCLayout1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:shooter"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">
    <Viewbox Stretch="Fill">
        <Grid Height="460" Width="800" x:Name="grid">
            <Rectangle x:Name="a1" HorizontalAlignment="Left" Height="70" VerticalAlignment="Top" Width="70" RenderTransformOrigin="0.612,0.516" Margin="161,170,0,0">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/mushromm1.png"/>
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle x:Name="a2" HorizontalAlignment="Left" Height="70" Margin="320,69,0,0" VerticalAlignment="Top" Width="70">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/stump1.png"/>
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle x:Name="a3" HorizontalAlignment="Left" Height="70" Margin="505,165,0,0" VerticalAlignment="Top" Width="70" RenderTransformOrigin="0.04,-0.016">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/bush1.png"/>
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle x:Name="a4" HorizontalAlignment="Left" Height="65" Margin="335,205,0,0" VerticalAlignment="Top" Width="65" RenderTransformOrigin="0.523,0.383">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/stump3.png"/>
                </Rectangle.Fill>
            </Rectangle>
            <!--MAX TOP LEFT (left margin 10, top margin 8)-->
            <Rectangle x:Name="a5" Tag="Start" HorizontalAlignment="Left" Height="71" VerticalAlignment="Top" Width="100" Margin="10,8,0,0" >
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/portal.png"/>
                </Rectangle.Fill>
            </Rectangle>
            <!-- MAX BOTTOM RIGHT (left margin 628, top margin 292)-->
            <Rectangle x:Name="a6" Tag="End" HorizontalAlignment="Left" Height="68" VerticalAlignment="Top" Width="100" Margin="628,264,0,0" >
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/portal.png"/>
                </Rectangle.Fill>
            </Rectangle>
        </Grid>
    </Viewbox>
</UserControl>